@model IEnumerable<ProductCart.Models.Database.Product>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgb(0, 0, 0);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

            .card button:hover {
                flood-opacity: 0.7;
            }
    </style>
</head>
<body>
    <div></div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="https://thumbs.dreamstime.com/z/demo-red-rubber-stamp-over-white-background-88003515.jpg" alt="..." style="width: 100%">
                    <h1>@item.Name</h1>
                    <p class="price">$@item.Price</p>
                    <p>Some text about product..</p>
                    <p><button><a class="btn" href="Home/AddToCart">Add to Cart</a></button></p>
                </div>
            </div>
        }
    </div>
</body>
</html>


